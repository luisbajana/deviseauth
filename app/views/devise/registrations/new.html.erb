<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<div><%= f.label :username, "Nombre de usuario" %><br />
  <%= f.text_field :username, :autofocus => true, placeholder: "Tu nombre de usuario" %></div>


  <div><%= f.label :email, "Correo" %><br />
  <%= f.email_field :email, placeholder: "Correo de registro" %></div>

  <div><%= f.label :password, "Contrasena" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
